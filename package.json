{
  "name": "hardhat-project",
  "scripts": {
    "fmt": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
    "lint": "npm run lint:sol",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "slither": "slither .",
